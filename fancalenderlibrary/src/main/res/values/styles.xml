<resources>

    <style name="weekHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/calendar_text_normal</item>
        <item name="android:textColor">@color/week_header</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="day_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/calendar_text_small</item>
        <item name="android:textColor">@color/day_text_the_month</item>
        <item name="android:gravity">center</item>
    </style>




</resources>
